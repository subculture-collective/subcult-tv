# ── Environment ──────────────────────────────────────────────
# Copy this to .env and fill in real values for production.
# IMPORTANT: Use strong, unique values. Never commit .env to git.

# PostgreSQL
POSTGRES_USER=subcult
POSTGRES_PASSWORD=subcult_password
POSTGRES_DB=subcult
POSTGRES_PORT=5432

# Go API
API_PORT=8080
# JWT_SECRET must be at least 32 characters for security
JWT_SECRET=CHANGE_ME_TO_AT_LEAST_32_CHARS_RANDOM_STRING
CORS_ORIGINS=http://localhost:5175,http://localhost:4173

# Admin User (seeded on first run if no users exist)
ADMIN_USER=admin
ADMIN_PASSWORD=subcult_admin_password
ADMIN_EMAIL=info@subcult.tv

# Umami Analytics
UMAMI_PORT=3000
UMAMI_SCRIPT_NAME=subcult

# Frontend (used by Vite)
VITE_API_URL=http://localhost:8080
VITE_UMAMI_URL=http://localhost:3000
VITE_UMAMI_WEBSITE_ID=
